.clear
%div{ :id => "entry_#{entry.id}", :value => entry.id, :class => "entry grid_8"}
  .post
    %h2.title
      %a{:href => entry.url}= entry.title
      %br/
    #byline
      = "from #{link_to entry.subscription.title, subscription_path(entry.subscription)}"
      = "by #{entry.author}" unless entry.author.nil?
      •
      = entry.published.strftime "%a, %b %d %H:%M"
      = "• #{stream.category}" unless stream == nil

    .essence
      = entry.essence
  .controls
    - if entry.liked?
      <b>signal</b>
    - else
      = "<button id = \"signal#{entry.id}\" class=\"signal\" value=\"#{entry.id}\">signal</button>"

    - if entry.disliked?
      <b>noise</b>
    - else
      = "<button id = \"noise#{entry.id}\" class=\"noise\" value=\"#{entry.id}\">noise</button>"

    \::
    read?
    - if @current_user.has_read?(entry)
      = "<input type=\"checkbox\" id=\"check#{entry.id}\" value=\"#{entry.id}\" checked=\"true\" onclick=\"read(this)\" />"
    - else
      = "<input type=\"checkbox\" id=\"check#{entry.id}\" value=\"#{entry.id}\" onclick=\"read(this)\" />"
    .grid_1
  %br/
