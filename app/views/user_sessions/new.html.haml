.clear
.grid_2
  %br/
.grid_4
  %h2 Login
   
  - form_for @user_session, :url => user_session_path do |f|
    = f.error_messages
    = f.label :email
    <br />
    = f.text_field :email
    <br />
    <br />
    = f.label :password 
    <br />
    = f.password_field :password 
    <br />
    <br />
    = f.check_box :remember_me 
    = f.label :remember_me 
    <br />
    <br />
    = f.submit "Login" 
.grid_4
  %h2 New User?
  - form_for @user, :url => account_path do |f|
    = f.error_messages
    = render :partial => "users/form", :object => f 
    %br/
    = f.submit "Register" 
    

